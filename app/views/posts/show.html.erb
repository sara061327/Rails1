<h3>ユーザー詳細</h3>

<table>
  <tr>
    <th>id</th>
    <td><%= @post.user_id %></td>
  </tr>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.startdate %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @post.enddate %></td>
  </tr>
  <tr>
  <th>終日</th>
  <td><%= @post.allday %></td>
</tr>
<tr>
<th>更新日</th>
<td><%= @post.renewal_date %></td>
</tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
  </ul>
</div>