<h3>ユーザー新規作成</h3>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :user_id ,"ID" %></th>
      <td><%= f.text_field :ID %></td>
    </tr>

    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :startdate ,"開始日" %></th>
      <td><%= f.text_field :startdate %></td>
    </tr>

    <tr>
      <th><%= f.label :enddate ,"終了日" %></th>
      <td><%= f.text_area :enddate %></td>
    </tr>

    <tr>
    <th><%= f.label :allday ,"終日" %></th>
    <td><%= f.text_area :allday %></td>
  </tr>

  <tr>
  <th><%= f.label :update ,"更新日時" %></th>
  <td><%= f.text_area :update %></td>
</tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :users %></li>
    </ul>
  </div>
<% end %>