<h3>スケジュール一覧</h3>
<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>


<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細ページへのリンク</th>
      <th>編集ページへのリンク</th>
      <th>削除リンク</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.startdate %></td>
        <td><%= post.enddate %></td>
        <td><%= post.alldate %></td>
        <td><%= post.renewal_date %></td>
        <td>
        <%= link_to "詳細", post %>
        </td>
        <td>
        <%= link_to "編集", post %>
        </td>
        <td>
        <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
    <p><%= link_to "新規追加", :new_post %></p>
  </tbody>
</table>

